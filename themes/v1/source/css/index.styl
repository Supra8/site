.index-page
  .usp
    .columns
      .column
        &:nth-last-child(1),
        &:nth-last-child(2)
          padding-top: 50px;


  .browser-container
    width: 100%;
    position: relative;
    &:before
      content: "";
      display: block;
      padding-top: 80%;

  .browser
    position:  absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    color: white;
    border: solid 1px #ccc
    border-radius: 4px
    margin: 100px auto
    width: 100%
    box-shadow: 0px 3px 30px 0px rgba(0,0,0,0.2)
    overflow: hidden
    display: flex
    flex-direction: column

    .browser-header
      flex-basis: auto
      height: 35px
      background: #ddd
      border-bottom: 1px solid #ccc
      display: flex

    .browser-btns
      height: 35px
      display: inline-block
      padding: 0 10px
      line-height: 38px
      width: 65px
      flex-basis: auto

    .browser-btn
      width: 10px
      height: 10px
      border: 1px solid rgba(0,0,0,0.15)
      border-radius: 6px
      display: inline-block
      margin: 1px

      &.close
        background-color: #FD615B
      &.retract
        background-color: #FDBC40
      &.expand
        background-color: #33C84A

  .page
    flex: 1
    background: url('/images/screenshot.jpg')
    background-size: 100%
    background-repeat: no-repeat
    z-index: 10
    text-align: center
    overflow-y: auto
    position: relative
