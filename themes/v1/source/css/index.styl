.index-page
  .footer
    background-color: #fff;
  .usp, .hosting
    margin-bottom: -30px;
    .columns
      .column
        margin-bottom: 30px;
        @media screen and (max-width: 960px)
          padding: 0 10px;
        @media screen and (max-width: 640px)
          padding: 0;

  .hosting
    margin-bottom: 0;

  .intro
    background: #f1f1f1;
    padding: 50px 0px;
    text-align: center;
    p
      font-size: 1.25em;
      color: #999;
      font-weight: 300;
      @media screen and (max-width: 640px)
        font-size: 1em;
        font-weight: normal;
