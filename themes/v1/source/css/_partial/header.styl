.header
  height: 80px;
  z-index: 9;
  color: #222;
  font-size: 1.1em;

  @media screen and (max-width: 640px)
    display: block;

  .language
    color: #999;
    text-transform: uppercase;
    font-size: 0.9em;
    padding-top: 1px;
    svg
      vertical-align: top;
      margin-right: 3px;

  .logo
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    line-height: 2em;
    margin: 0;
    font-size: 1em;

    a
      font-weight: 500;
      text-transform: uppercase;

      svg
        fill: #e91e63;
        overflow: visible;
