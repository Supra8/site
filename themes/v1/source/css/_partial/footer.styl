.footer
  color: #999;
  background: #fff;
  position: relative;
  padding: 50px 0 30px 0;
  background-color: #eee;

  @media screen and (max-width: 640px)
    .column
      width: 50%
      padding-right: 0px!important;

  @media screen and (max-width: 440px)
    text-align: center;
    .column
      width: 100%

  nav
    font-size: .9em;
    .column
      padding: 0;
      margin-bottom: 20px;
      float: left;
      padding-right: 50px;
  li
    &.title
      font-weight: 500;
      margin-bottom: 5px;
      color: #333;
      text-transform: uppercase;

    a
      padding: 5px 0;
      display: block;
