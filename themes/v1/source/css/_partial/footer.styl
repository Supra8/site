.footer
  color: #999;
  border-top: solid 1px #ddd;
  background: #eee;
  nav
    font-size: .9em;
    padding-top: 20px;
    padding-bottom: 20px;
  li
    float: left;
    margin-right: 20px;
    &:first-child
      font-weight: 500;
      text-transform: uppercase;

  .sign-up
    padding: 20px 0px;
    background: #eee;
    border-bottom: solid 1px #ddd;
    .container
      display: flex;
      align-items: center;
      justify-content: center;
    a
      padding: 19px;
      color: #fff;
      background-color: #e91e63;
      flex: 0;
    p
      text-align: left;
      flex: 1;
      color: #999;
      padding-left: 15px;
