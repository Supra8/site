#mobile-nav
  display: none;
  position: absolute;
  top: 50%;
  right: 15px;
  transform: translateY(-50%);
  z-index: 99;
  @media screen and (max-width: 480px)
    display: inline;

.nav-items
  position: absolute;
  top: 50%;
  right: 15px;
  transform: translateY(-50%);

  @media screen and (max-width: 480px)
    width: 100%;
    right: 0;
    top: -180px;
    top: calc(-100% - 40px);
    transform: none;
    background: #fff;
    z-index: 9;

    &.mobile-nav
      transition: top .5s;
      top: 0;

    .items
      padding: 10px 0;
      .item
        float: none!important;
        padding: 10px 0px;


  .items
    .item
      float: left;
      margin-left: 30px;
