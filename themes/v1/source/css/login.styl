.login-page

  .field
    margin-bottom: 20px;

  input
    font-size: 1.1em;
    border: 0;
    border-bottom: 1px solid #ccc;
    font-family: inherit;
    -webkit-appearance: none;
    border-radius: 0;
    padding: 0;
    cursor: text;

  input:focus
    outline: 0;
    border-bottom: 1px solid #666;

  label
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 5px;
    display: block;

  main
    //position: absolute;
    //top: 50%;
    //transform: translateY(-50%);
    width: 100%;
    padding-top: 35px;

  .title, .sign-up
    text-align: center;
    margin: 15px 0px;

  .title
    font-size: 1.5em;
    letter-spacing: -1px;
    text-align: left;
    padding: 0px 50px;

  .sign-up
    color: #999;
    font-size: 0.9em;

  .login-container
    width: 400px;
    margin: 0 auto;
    background: #eee;
    padding: 30px 0px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.26);

  form
    width: 300px;
    margin: 0 auto;
    padding: 30px 0px;

    input
      display: block;
      &[type="email"], &[type="password"]
        width: 100%;
        border: solid 1px #ddd;
        padding: 12.5px;
        margin-bottom: 5px;

      &[type="submit"]
        background: #ddd;
        padding: 12.5px;
        width: 50%;
        margin-top: -10px;
