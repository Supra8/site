body.sign-up
  overflow: hidden;

#sign-up-modal
  opacity: 0;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: -1;

  .login
    margin-top: 15px;
    display: block;
    font-size: .85em;
    color: #999;

  &.active
    z-index: 99;
    transition: opacity .5s;
    opacity: 1!important;
    visibility: visible!important;
    width: 100%;
    height: 100%;
    .outer
      background-color: rgba(0, 0, 0, 0.9);
      height: 100%;

    .inner
      width: 100%;
      max-width: 400px;
      left: 50%;
      top: 50%;
      position: absolute;
      margin-left: -200px;
      margin-top: -130px;
      background: #eee;
      padding: 30px 25px 20px 25px;
      @media screen and (max-width: 430px)
        padding: 0px 15px;
        left: inherit;
        margin-left: inherit;

      .terms
        font-size: 0.7em;
        color: #999;
        margin-top: 15px;
        line-height: 1.4em;

      .button
        display: inline-block;
        padding: 14.5px 12.5px 12.5px 12.5px;
        width: 50%;
        margin-right: -4px;
        font-size: 0.9em;
        margin-top: 15px;
        &.button-primary
          background: #e91e63;
          color: #fff;

        &.button-mute
          background: #ddd;
          color: #999;

      .sign-up-header
        margin-bottom: 20px;
        .title
          margin-bottom: 15px;
          font-size: 1.1em;
          font-weight: 500;
          text-transform: uppercase;
          float: left;
          margin-right: 5px;

        .subtitle
          font-size: 1.1em;
          color: #999;

      input
        display: block;
        width: 100%;
        border-radius: 3px;
        margin-top: 5px;
