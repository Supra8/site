<div id="sign-up-modal" style="opacity: 0; visibility: hidden;">
  <div class="outer"></div>
  <div class="inner">
    <header class="sign-up-header">
      <div class="title">Enginsight</div>
      <div class="subtitle"><%- __('navigation.registration') %></div>
    </header>

    <form action="https://api.enginsight.com/v1/users" method="post">
      <input type="text" name="fullName" placeholder="<%- __('signUp.fullName') %>" required>
      <input type="email" name="email" placeholder="<%- __('signUp.email') %>" required>
      <input type="hidden" name="language" value="<%- config.language %>">

      <a class="button button-mute" href="https://app.enginsight.com"><%- __('signUp.login') %></a>
      <button class="button button-primary" type="submit"><%- __('signUp.submit') %></button>
    </form>

    <footer class="sign-up-footer">
      <div class="terms"><%- __('signUp.terms') %></div>
    </footer>
  </div>
</div>
