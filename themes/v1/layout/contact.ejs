<div class="container">
  <form class="contact-form" action="<%= config.api.host %><%= config.api.port !== '' ? ':' + config.api.port : '' %>/site/contact" method="post">
    <label for="email">Ihre E-Mail Adresse</label>
    <input type="email" name="email" value="" required>

    <label for="title">Titel</label>
    <input type="text" name="title" value="" required>

    <label for="content">Ihre Nachricht an uns</label>
    <textarea name="content" rows="10" required></textarea>

    <input type="hidden" name="language" value="<%= __('language') %>">

    <input class="submit" type="submit" value="Nachricht versenden">
  </form>
</div>
